<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center">Crea tu perfil!</h1>
    <p class="text-center">AÃ±ade tus datos para recibir los pedidos!</p>
    <div class="well">
      <%= form_for @profile, url: user_profile_path do |f| %>
        <div class="form-group">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :adress %>
          <%= f.text_field :adress, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :phone_number %>
          <%= f.text_field :phone_number, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :contact_email %>
          <%= f.text_field :contact_email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit "Crear perfil", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>